{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ✅ Fix for Mina zkApp Decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* ✅ Fix for React & JSX Errors */
    "jsx": "react-jsx",

    /* ✅ Fix for Build Errors */
    "outDir": "./dist",  // Ensures compiled files go to a separate directory
    "rootDir": "./src",  // Ensure TypeScript only compiles from the correct folder
    "noEmitOnError": true // Prevents generating files if there are errors
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "contracts/build",
    "ui/.next",
    "ui/out",
    "ui/build"
  ]
}
